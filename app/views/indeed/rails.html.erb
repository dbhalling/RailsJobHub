<div class="left-col col-xs-6">
  <% @indeedrails_1.each do |job| %>
    <div class="col-xs-12 box">
      <span class="col-xs-12 job-title">
        <h3><%= link_to "#{job.jobtitle}", "#{job.link}", target: "_blank" %></h3>
      </span>
      <span class="col-xs-12 job-description"><%= job.snippet %></span>
      
      <span class="col-xs-4 job-start"><h4>Posted:</h5></span>
      <span class="col-xs-4 job-finish"><h4>From:</h5></span>
      <span class="col-xs-4 job-bids"><h4>Where:</h5></span>
    
      <span class="col-xs-4 job-start"><b><%= job.date %></b></span>
      <span class="col-xs-4 job-finish"><b><%= job.source %></b></span>
      <span class="col-xs-4 job-bids">
        <%= job.city + " " %>
        <% unless job.state == "" %><%= job.state %><% end %>
        <b><%= ", " + job.country %></b>
      </span>
    </div>
  <% end %>
</div>

